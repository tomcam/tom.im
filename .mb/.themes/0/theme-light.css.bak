/* IMPORTANT: Downloadable fonts should be imported above this rule  */

:root 
{
/* ************************************/
/* ROOT COLORS                        */
/* ************************************/
	/*
	 * Most but not all colors used by a theme appear
	 * in this CSS file as CSS variables, so that you
	 * can make big changes to your theme by doing 
	 * nothing more than altering these values.
	 * 
	 * Text colors use fg, meaning foreground, and
	 * background colors use fg. Sometimes they're
	 * used to color non-text objects, which is why
	 * they aren't called -text or -background.
	 *
	 */

    /* Default foreground (text) and background colors  */
    --fg: black;
    --bg: white;
    /* Default link colors */
    --a: darkblue;
    --a-link: var(--a);
    --a-visited: var(--a);
    --a-hover: var(--a);
    --a-active: var(--a);

    
    /* Secondary foreground (text) and background colors for accents. */
    --trim-fg:darkgray; 
    --trim-bg:white;

/* ************************************/
/*  ROOT HEADER COLORS                */
/* ************************************/

    /* Primary foreground (text) and background colors in header */
    --header-fg: black;
    --header-bg: var(--bg);
    /* Link colors specific to header */
    --a-header: var(--header-fg); 
    --a-header-link:  var(--header-fg);
    --a-header-visited:  var(--header-fg);
    --a-header-hover: var(--header-fg); 
    --a-header-active:  var(--header-fg);


/* ************************************/
/*  ROOT NAVBAR (NAV TAG) COLORS      */
/* ************************************/

    /* Primary foreground (text) and background colors in navbar */
    --navbar-fg:black;
    --navbar-bg:var(--bg);
    /* Link colors specific to navbar */
    --a--navbar: var(--a); 
    --a--navbar-link: var(--a);
    --a--navbar-visited: var(--a);
    --a--navbar-hover: var(--a); 
    --a--navbar-active: var(--a);


/* ************************************/
/*  ROOT ARTICLE COLORS               */
/* ************************************/

    /* Default foreground (text) and background colors in article */
    --article-fg: var(--fg);
    --article-bg: var(--bg);
    /* Link colors specific to article */
    --a-article: var(--a); 
    --a-article-link: var(--a);
    --a-article-visited: var(--a);
    --a-article-hover: var(--a); 
    --a-article-active: var(--a);

        
/* ************************************/
/*  ROOT SIDEBAR (ASIDE TAG)  COLORS  */
/* ************************************/

    /* Default foreground (text) and background colors in aside */
    --sidebar-fg: var(--fg);
    --sidebar-bg: var(--bg);
    /* Link colors specific to sidebar */
    --a-sidebar: var(--fg); 
    --a-sidebar-link: var(--fg);
    --a-sidebar-visited: var(--a);
    --a-sidebar-hover: var(--a); 
    --a-sidebar-active: var(--a);

    /* Default foreground (text) and background colors in aside */
    --sidebar-fg: white;
    --sidebar-bg: gray;
    /* Link colors specific to sidebar */
    --a-sidebar: var(--a); 
    --a-sidebar-link: var(--a);
    --a-sidebar-visited: var(--a);
    --a-sidebar-hover: var(--a); 
    --a-sidebar-active: var(--a);


/* ************************************/
/*  ROOT FOOTER COLORS                */
/* ************************************/

     /* Primary foreground (text) and background colors in footer */
    --footer-fg:var(--fg);
    --footer-bg:var(--bg);
    /* Link colors specific to footer */
    --a-footer: white;
    --a-footer-link: var(--a);
    --a-footer-visited: var(--a);
    --a-footer-hover: var(--a); 
    --a-footer-active: var(--a);

}


/* ********************************/
/*  HEADER BEHAVIOR               */
/* ********************************/

header > p {color:var(--header-fg);background-color:var(--header-bg);} 
header > ul > li > a,
header > ul > li > a:link,
header > ul > li > a:visited
	{color:var(--header-fg);}
header > ul > li > a:hover,
header > ul > li > a:active
	{color:var(--header-fg);}

header > ul > li:first-child > a {color:var(--header-fg);}


/* ********************************/
/*  NAVBAR BEHAVIOR               */
/* ********************************/
nav > p {background-color:var(--navbar-bg); }
nav > ul > li > a,
nav > ul > li > a:link,
nav > ul > li > a:visited {color:var(--navbar-fg);} 

nav > p > a,
nav > p > a:link,
nav > p > a:visited {color:var(--navbar-fg);} 


/* ********************************/
/*  ARTICLE  BEHAVIOR             */
/* ********************************/

article > p > a,
article > p > a:link,
article > p >  a:visited
	{color:var(--a);}
article > p >  a:hover,
article > p >  a:active
	{color:var(--trim-bg);background-color:var(--trim-fg);}

article > p > code, article > code, article > pre, article > pre > code {       
    background-color:#F0F0F0;                                                   
    }    

article > table > thead > tr > th {color:var(--header-bg);background-color:var(--header-fg);}
article > table > tbody > tr > td {border-bottom:.1px solid gray;}


/* ********************************/
/*  SIDEBAR (ASIDE TAG)  BEHAVIOR */
/* ********************************/

aside > h2 {color:black;background-color:var(--article-bg);}
aside > h3 {color:var(--trim-fg);}
aside > h4 {color:var(--header-bg);background-color:var(--header-fg)}
aside > h3 > del {color:var(--header-bg);} 


/* ********************************/
/*  FOOTER  BEHAVIOR              */
/* ********************************/

footer > table > thead > tr > th {color:var(--footer-fg);background-color:var(--footer-bg);}
/* Color of links in main rows (body) of table */
footer > table > tbody > tr > td > a:link,
footer > table > tbody > tr > td > a:visited
	{color:var(--header-fg);}
footer > table > tbody > tr > td > a:hover,
footer > table > tbody > tr > td > a:active
	{color:var(--header-fg);}


